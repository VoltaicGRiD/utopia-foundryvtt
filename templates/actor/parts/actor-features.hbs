<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='talent'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='talent'}}
      </a>
    </div>
  </li>
  {{#each features as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4 data-tooltip="{{item.system.description}}" data-tooltip-direction="LEFT">{{item.name}}</h4>
      </div>
      <div class="talent-points">
        <h4>
          <span>
            <i class="fa-solid fa-shield"></i>
            {{item.system.points.body}}
          </span>
          &nbsp;&nbsp;
          <span>
            <i class="fa-solid fa-brain"></i>
            {{item.system.points.mind}}
          </span>
          &nbsp;&nbsp;
          <span>
            <i class="fa-solid fa-flame"></i>
            {{item.system.points.soul}}
          </span>
        </h4>
      </div>
      {{!-- 
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='feature'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='feature'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
      --}}
    </li>
  {{/each}}
</ol>