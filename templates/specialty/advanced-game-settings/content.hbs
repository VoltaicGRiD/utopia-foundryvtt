<section class="tab content active" data-group="primary" data-tab="content" style="height: 100%">

  <nav class="sheet-tabs tabs tab-container tabs-left" aria-role="Form Tab Navigation" data-application-part="tabs">
    <a class="item" data-action="subTab" data-tab="traits" data-tooltip="UTOPIA.Settings.Tabs.traits">
      <i class="fas fa-fw fa-book"></i>
    </a>
    <a class="item " data-action="subTab" data-tab="subtraits" data-tooltip="UTOPIA.Settings.Tabs.subtraits">
      <i class="fas fa-fw fa-align-left"></i>
    </a>
    <a class="item " data-action="subTab" data-tab="specialtyChecks" data-tooltip="UTOPIA.Settings.Tabs.specialtyChecks">
      <i class="fas fa-fw fa-bolt"></i>
      {{localize "UTOPIA."}}
    </a>
    <a class="item " data-action="subTab" data-tab="damageTypes" data-tooltip="UTOPIA.Settings.Tabs.damageTypes">
      <i class="fas fa-fw fa-sword"></i>
    </a>
    <a class="item " data-action="subTab" data-tab="artistries" data-tooltip="UTOPIA.Settings.Tabs.artistries">
      <i class="fas fa-fw fa-magic"></i>
    </a>
    <a class="item " data-action="subTab" data-tab="rarities" data-tooltip="UTOPIA.Settings.Tabs.rarities">
      <i class="fas fa-fw fa-box-open"></i>
    </a>
    <a class="item " data-action="subTab" data-tab="languages" data-tooltip="UTOPIA.Settings.Tabs.languages">
      <i class="fas fa-fw fa-globe"></i>
    </a>
    <a class="item " data-action="subTab" data-tab="components" data-tooltip="UTOPIA.Settings.Tabs.components">
      <i class="fas fa-fw fa-box"></i>
    </a>
  </nav>

  <textarea name="editor">{{settingValue}}</textarea>
  <div class="flexrow">
    <button type="button" class="reset danger" data-action="reset">{{localize 'UTOPIA.Settings.Buttons.Reset'}}</button>
    <button type="button" class="save" data-action="save">{{localize 'UTOPIA.Settings.Buttons.Save'}}</button>
  </div>

</section>